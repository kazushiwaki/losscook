<h1>投稿を編集</h1>

<%= form_with model: @recipe, local: true do |f| %>
  <div>
    <%= f.label :title, 'タイトル' %><br>
    <%= f.text_field :title, class: 'border p-2 w-full' %>
  </div>

  <div>
    <%= f.label :description, '説明' %><br>
    <%= f.text_area :description, class: 'border p-2 w-full' %>
  </div>

  <div>
    <%= f.label :ingredients_text, '材料' %><br>
    <%= f.text_area :ingredients_text, class: 'border p-2 w-full' %>
  </div>

  <div>
    <%= f.label :step_text, '作り方' %><br>
    <%= f.text_area :step_text, class: 'border p-2 w-full' %>
  </div>

  <% if @recipe.image.attached? %>
    <div>
      <h2>現在の画像</h2>
      <%= image_tag @recipe.image, class: 'img-fluid', alt: @recipe.title %>
      <%= f.check_box :remove_image %> 画像を削除
    </div>
  <% end %>

  <div>
    <%= f.label :image, '画像変更' %>
    <%= f.file_field :image, class: 'form-control' %>
  </div>

  <div class="mt-4">
    <%= f.submit '更新する', class: 'bg-green-500 text-white px-4 py-2 rounded hover:bg-green-700' %>
  </div>
<% end %>

<%= link_to '投稿詳細に戻る', recipe_path(@recipe), class: 'text-blue-500 hover:underline' %>
