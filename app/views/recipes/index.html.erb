<div class="container mx-auto p-4">
  <h1 class="text-2xl font-bold mb-4">レシピ一覧</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @recipes.each do |recipe| %>
      <div class="border rounded-lg p-4 shadow-md">
        <h2><%= link_to recipe.title, recipe_path(recipe), class: 'text-blue-500 hover:underline' %></h2>
        <p class="text-gray-600 mt-2"><%= recipe.description %></p>
        <p class="text-sm text-gray-500 mt-4">投稿者: <%= recipe.user.name %></p>
      </div>
    <% end %>
  </div>
</div>

<%= link_to 'ホーム画面に戻る', root_path, class: 'text-blue-500 hover:underline' %>

<%= link_to 'レシピを投稿する', new_recipe_path, class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700 ml-40' %>
